<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title_fragment_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20sp"
        android:text="@string/about_information"
        android:textAlignment="center"
        android:textSize="20sp"
    />

    <Button
        android:id="@+id/begin_tutorial_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/begin_tutorial"
        android:layout_margin="20sp"
        android:backgroundTint="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/fragment_information_imageView"
        android:layout_width="244dp"
        android:layout_height="357dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_fragment_information"
        app:srcCompat="@drawable/book_cover" />

    <TextView
        android:id="@+id/fragment_information_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:text="@string/tutorial_introduction_app_description"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/begin_tutorial_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_information_imageView" />


        />
</androidx.constraintlayout.widget.ConstraintLayout>