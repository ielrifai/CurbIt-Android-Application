<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_subgoal_list"
        android:text="@string/subgoal_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_subgoal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_subgoal_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10sp"
        />



    <TextView
        android:id="@+id/text_empty_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_subgoal_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/empty_subgoal"
        android:gravity="center"
        android:padding="40sp"
        android:textSize="20sp"
        android:visibility="invisible"
        />



    <Button
        android:id="@+id/btn_add"
        android:layout_width="55sp"
        android:layout_height="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20sp"

        android:layout_gravity="center"
        android:background="@drawable/shape_round_button"
        android:drawableStart="@drawable/ic_add"
        android:drawableTint="#FFFF"

        android:padding="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>